# Cloud ML mode - HuggingFace inference with local fallback (medium build ~5-8 min)
FROM python:3.10-slim

WORKDIR /app

# Copy cloud ML requirements and install dependencies
COPY requirements-full.txt .
RUN pip install --no-cache-dir -r requirements-full.txt

# Copy application code
COPY . .

# Set environment variables for cloud ML mode
ENV APP_MODE=cloud-ml

# Expose the port the app runs on
EXPOSE 8000

# Command to run the uvicorn server for FastAPI
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]